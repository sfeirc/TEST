      "separator": false,
      "spacing": "small",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Slide ${slide_index + 1}",
                  "weight": "bolder",
