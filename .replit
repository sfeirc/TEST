run = "cd backend && python -m uvicorn main:app --host 0.0.0.0 --port $PORT"
entrypoint = "backend/main.py"
language = "python3"

[deploy]
run = ["sh", "-c", "cd backend && pip install -r requirements.txt && python -m uvicorn main:app --host 0.0.0.0 --port $PORT"]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[env]
PYTHONPATH = "${PYTHONPATH}:backend"
PORT = "3001"

